{% extends 'base.html.twig' %}

{% block title %}My Profile{% endblock %}

{% block body %}
    <h1>My profile</h1>
    <h2>My books :</h2>
    <div class="book-container">
        {% for book in user.books %}
            <h3>{{ book.title }}</h3>
            <a class="book" href="{{ path('book_show', {'slug': book.slug}) }}">
                <div class="inner-book">
                    <div class="img" style="padding-top: calc(1.07 * 100%)">
                        <img src="{{ vich_uploader_asset(book, 'coverFile') }}" />
                    </div>
                    <div class="page"></div>
                    <div class="page page-2"></div>
                    <div class="page page-3"></div>
                    <div class="page page-4"></div>
                    <div class="page page-5"></div>
                </div>
            </a>
        {% endfor %}
    </div>
    <h2>My favs :</h2>
    <div class="book-container">
        {% for book in user.fav %}
            <h3>{{ book.title }}</h3>
            <a class="book" href="{{ path('book_show', {'slug': book.slug}) }}">
                <div class="inner-book">
                    <div class="img" style="padding-top: calc(1.07 * 100%)">
                        <img src="{{ vich_uploader_asset(book, 'coverFile') }}" />
                    </div>
                    <div class="page"></div>
                    <div class="page page-2"></div>
                    <div class="page page-3"></div>
                    <div class="page page-4"></div>
                    <div class="page page-5"></div>
                </div>
            </a>
        {% endfor %}
    </div>
{% endblock %}
